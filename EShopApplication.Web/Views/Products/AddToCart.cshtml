<h4>Add to Cart</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddToCart" method="post">
            <input type="hidden" asp-for="ProductId" value="@Model.ProductId" /><!--ProductId-->
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" disabled /><!--ProductName-->
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" /><!--Quantity-->
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <!--KE VRATI OBJEKT OD ADDTOCARTDTO, koj go hendlame vo post requestot -->
            </div>
        </form>
    </div>
</div>
